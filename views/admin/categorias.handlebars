<h2>Lista de categorias: </h2>
<br>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova categoria</button></a>

{{#each categorias}}
<div class="card mt-1">
    <div class="card-body">
        <h4>{{nome}}</h4>
        <small>{{slug}}</small>
        <br>
        <a href='/admin/categorias/edit/{{_id}}'><button class="btn btn-success mt-2">Editar Categoria</button></a>
        <form action="/admin/categorias/deletar" method="POST">
            <input type="hidden" name="id" value="{{_id}}">
            <button type="submit" class="btn btn-danger mt-2">Deletar categoria</button>
        </form>
    </div>
</div>
{{else}}
    <h4 class="mt-3">Nenhuma categoria registrada</h4>
{{/each}}