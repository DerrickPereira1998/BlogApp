  <a id="margin" href="/addpostagem"><button class="btn btn-secondary btn-lg" type="button">Nova Postagem</button></a></h2>

{{#each postagens}}
<div class="card mt-2">
    <div class="card-body">
        <a href="/postagem/{{titulo}}"><h3>{{titulo}}</h3></a>
        <p>{{descricao}}</p>
        <p>Categoria: {{categoria.nome}}</p>
        <hr>
        <small>{{data}}</small>
    </div>
</div>
{{else}}
<p>Nenhuma postagem registrada!</p>
{{/each}}
